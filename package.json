{
  "name": "strive",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "backend_strive",
    "frontend_strive"
  ],
  "scripts": {
    "dev:backend": "npm run dev --prefix backend_strive",
    "dev:frontend": "npm run dev --prefix frontend_strive",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "build": "npm run build --prefix backend_strive && npm run build --prefix frontend_strive"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.10.0",
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "installConfig": {
    "hoisting": true
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mime": "^4.1.0",
    "mongoose": "^8.19.3",
    "socket.io": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  }
}
